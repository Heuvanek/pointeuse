{% extends 'base.html.twig' %}{% block title %}{{ parent() }} - Historique Mensuel{% endblock %}{% block body %}<link rel="stylesheet" href="{{ asset('css/StyleCalendar.css') }}" />
<script src="{{ asset('js/CalendarControl.js') }}"></script><div class="d-flex justify-content-center">
    <div class="form-group col-3">
            <i class="far fa-calendar-alt fa-2x position-absolute"  style="right: 0px; top:3px" onclick="showCalendarControl('dpMonthYear');"/></i>
            <input type="text"  class="form-control mr-0" placeholder="Choisir un mois" id="dpMonthYear" onclick="showCalendarControl('dpMonthYear');"/>
    </div>
</div><table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Client</th>
            <th scope="col">Mission</th>
            <th scope="col">Total</th>
        </tr>
    </thead>
    <tbody>
        {% for client in clients %}
        <tr>
            {% for mission in missions %}
                 {% for oneMission in mission %}
                    {% if client.getId() == oneMission.getIdClient() %}
                    {# {{dump(client.getId()) }}
                    {{dump(oneMission.getIdClient()) }}
                    {{dump(oneMission) }} #}
                    <tr>
                    <th scope="row">
                        <a href="{{ url('listing_mission',{id_client: client.id}) }}" class="text-info">
                            {{ client.society }}<br><small>{{ client.name }} {{ client.surname }}</small>
                        <a>
                    </th>
                        <td>                
                            {{ oneMission.TitleMission}}
                        </td>
                        <td>
                            {{ oneMission.time}}
                        </td>
                    </tr>
                    {% endif %}
                {% endfor %}
        {% endfor %}
        {% endfor %}
    </tbody>
</table>
{% endblock %}